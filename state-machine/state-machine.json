{
    "Comment": "A simple AWS Step Functions state machine that automates a call center support session.",
    "StartAt": "Open Case",
    "States": {
      "Open Case": {
        "Type": "Task",
        "Resource": "${OpenCaseLambda}:$LATEST",
        "Next": "Assign Case"
      }, 
      "Assign Case": {
        "Type": "Task",
        "Resource": "${AssignCaseLambda}:$LATEST",
        "Next": "Work on Case"
      },
      "Work on Case": {
        "Type": "Task",
        "Resource": "${WorkOnCaseLambda}:$LATEST",
        "Next": "Is Case Resolved"
      },
      "Is Case Resolved": {
          "Type" : "Choice",
          "Choices": [ 
            {
              "Variable": "$.Status",
              "NumericEquals": 1,
              "Next": "Close Case"
            },
            {
              "Variable": "$.Status",
              "NumericEquals": 0,
              "Next": "Escalate Case"
            }
        ]
      },
       "Close Case": {
        "Type": "Task",
        "Resource": "${CloseCaseLambda}:$LATEST",
        "End": true
      },
      "Escalate Case": {
        "Type": "Task",
        "Resource": "${EscalateCaseLambda}:$LATEST",
        "Next": "Fail"
      },
      "Fail": {
        "Type": "Fail",
        "Cause": "Engage Tier 2 Support."    }   
    }
  }